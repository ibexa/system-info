{% extends '@ezdesign/ui/layout.html.twig' %}

{% trans_default_domain 'systeminfo' %}

{% block body_class %}ez-info-view ez-has-full-width-footer{% endblock %}
{% block side_column %}{% endblock %}

{% block breadcrumbs %}
    {% include '@ezdesign/ui/breadcrumbs.html.twig' with { items: [
        { value: 'breadcrumb.admin'|trans(domain='messages')|desc('Admin') },
        { value: 'systeminfo'|trans|desc('System Information') }
    ]} %}
{% endblock %}

{% block header %}
    {% include '@ezdesign/ui/page_title.html.twig' with {
        title: 'systeminfo'|trans|desc('System Information'),
        icon_name: 'information'
    } %}
{% endblock %}

{% block content %}
    {{ ez_render_component_group('systeminfo-tab-groups') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('ezplatform-admin-ui-tabs-js', null, 'ezplatform') }}
{% endblock %}
